<% provide(:title, "Log in") %>

<div class="row">
  <br /><br />
  <div class="paper col l4 m6 s12 offset-l4 offset-m3">
    <h3>Log in</h3>
    <hr /><br />
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', :value => 'ryan@example.org' %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control', :value => 'foobar' %>
        <%= f.check_box :remember_me %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <span>Remember me on this computer</span>
      <% end %>
        <br />
        <br />
      <%= f.submit "Log in", class: "float-right waves-effect waves-light btn btn-small" %>
    <% end %>
    <br /> <br />

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>