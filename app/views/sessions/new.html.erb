<% provide(:title, "Log in") %>

<div class="row">
  <br /><br />
  <div class="paper col l4 m6 s12 offset-l4 offset-m3">
    <div>
          <h3 style="display: inline-block; margin: 0 20px 0 0;">Log in</h3>
          <img src="https://s3.amazonaws.com/yourtime-official/your+time+logo.jpg"
               alt="your time logo" style="float: right; width: 150px; height: 30px; margin: 20px 0 10px 0;"/>
    </div>
    <hr /><br />
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control sign-up-form', :value => 'ryan@example.org' %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control sign-up-form', :value => 'foobar' %>
        <%= f.check_box :remember_me %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <span>Remember me on this computer</span>
      <% end %>
        <br />
        <br />
      <%= f.submit "Log in",
                   class: "waves-effect waves-light btn blue lighten-1",
                   style: 'float: right; margin: 0 15px 0 0' %>
    <% end %>
    <br /> <br />

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>