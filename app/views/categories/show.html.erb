      <h3><%= @category.workplace.workplace_name %></h3>
    <small>Category:</small>
    <h3><%= @category.category_name %></h3>
    <small>Icon: &nbsp;</small>
    <h3><i class='fa <%= @category.category_icon %> fa-2x' id="fa-icon"></i></h3>
    <br />

  </div>
    <div class="card">
      <div class="card-content">
        <h4>Category Description</h4>
        <hr />
