          <p><%= @category.category_description %></p>
        </div>
        <br />
        <h4>Category Additional Info</h4>
        <hr />
        <div class="card-content">
          <p><%= @category.category_info %></p>
        </div>

      </div>
      <div class="card-action">

      </div>
    </div>
</div>