<div class="header-nav">
  <% if logged_in? && current_user.admin? %>
    <ul>
      <li>
        <%= link_to "back", :back, class: 'waves-effect waves-light btn white' %>
      </li>
      <li>
        <%= link_to "edit", edit_workplace_category_path(@category.workplace_id, @category.slug), class: 'waves-effect waves-light btn white' %>
      </li>
      <li>
        <%= link_to "new category", new_workplace_category_path(@category.workplace_id), class: 'waves-effect waves-light btn white' %>
      </li>
      <li>
        <%= link_to "locations", category_locations_path(@category.id), class: 'waves-effect waves-light btn white' %>
      </li>
      <li>
        <%= link_to "delete", workplace_category_path(@category.id),
                    method: 'delete', data: { confirm: 'Are you sure?' }, class: 'waves-effect waves-light btn white' %>
      </li>
  <% end %>

  </ul>
</div>
<div class="row">

  <div class="col l3 m6 s6 offset-l1">
