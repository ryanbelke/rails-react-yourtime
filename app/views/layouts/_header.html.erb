<header class="navbar navbar-fixed-top indigo darken-2">
  <div class="container-header indigo darken-2">
    <%= link_to "YourTime", root_path, id: "logo" %>
    <nav class="indigo darken-2 z-depth-0">
      <ul class="nav navbar-nav navbar-right ">
        <% if  logged_in? && current_user.admin? %>
            <li class="admin hidden-s">Admin</li>
            <li><%= link_to "Home", root_path, class: 'hidden-sm' %></li>
            <li><%= link_to "New Workplace", new_workplace_path %></li>
            <li><%= link_to "Users", users_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                View <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>


        <% elsif logged_in? && !current_user.admin? %>
          <li><%= link_to "Home", root_path, class: 'hidden-sm' %></li>
          <li><%= link_to "New Appointment", new_user_appointment_path(current_user) %></li>
          <li><%= link_to "Profile", current_user %></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">

              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
            <li><%= link_to "Home", root_path %></li>

          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>