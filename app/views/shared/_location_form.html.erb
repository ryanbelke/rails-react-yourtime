<%= form_for(@location) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :location_name, placeholder: "Location name" %>
      <%= f.text_area :location_address, placeholder: "Location address" %>

    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>