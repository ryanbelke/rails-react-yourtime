<%= form_for(@location) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="paper">
      <%= f.label :location_name %>
      <%= f.text_field :location_name, placeholder: "Location name", class: 'form-control' %>
      <%= f.label :location_address %>
      <%= f.text_field :location_address, placeholder: "Location address", class: 'form-control' %>
      <%= f.label :location_description %>
      <%= f.text_area :location_description, placeholder: "Location description", class: 'materialize-textarea' %>
    </div>
    <br/>
    <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>