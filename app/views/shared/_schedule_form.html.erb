<div class="row">

  <div class="paper">
    <%= form_for [@category, @schedule] do |f| %>
      <%= f.label :date %>
      <%= f.text_field :date, placeholder: 'Select Date', class:'datepicker' %>

      <div class="capacity">
        <%= f.label :capacity %>
        <%= f.number_field :date_capacity, class: 'form-control' %>
      </div>

      <%= f.label :add_dates %>
      <%= f.button name: 'create_and_add', class: 'location-button btn-floating btn-small waves-effect waves-light blue' do %>
        <span class="location-icon material-icons">+</span>
      <% end %>
      <br />
      <br />

      <%= f.submit "Create", class: 'btn btn-primary' %>
      <br/>
    <% end %>

  </div>
</div>

<script>
    $('.datepicker').pickadate({
        selectMonths: true, // Creates a dropdown to control month
        selectYears: 15, // Creates a dropdown of 15 years to control year,
        today: 'Today',
        clear: 'Clear',
        close: 'Ok',
        closeOnSelect: false // Close upon selecting a date,
    });
</script>