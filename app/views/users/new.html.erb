<% provide(:title, 'Sign up') %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="paper" style="margin-top: 0; padding: 0">

      <div class="paper-header">
        Register
      </div>
      <img src="https://s3.amazonaws.com/yourtime-official/your+time+logo.jpg"
           alt="your time logo" style="width: 150px; height: 30px; margin: 10px 0 5px 10px;" />
      <div style="padding: 50px">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control sign-up-form' %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control sign-up-form' %>

          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control sign-up-form' %>

          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: 'form-control sign-up-form' %>

          <%= f.submit "Create my account",
                       class: "waves-effect waves-light btn blue lighten-1",
                       style: "float: right"
          %>
        <% end %>
      </div>
      <br />
    </div>
  </div>
</div>