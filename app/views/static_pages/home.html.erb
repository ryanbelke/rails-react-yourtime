<% if logged_in? %>
      <div class="row">
        <div class="col l3 m3 s6 paper">
          <section class="user_info">
            <%= render 'shared/user_info' %>
          </section>
          <section class="stats">
            <%= render 'shared/stats' %>
          </section>
          <aside class="micropost_form">
          </aside>
        </div>
        <div class="paper microposts col l3 m3 s6 offset-l6">
          <h4>Current workplaces</h4>
          <small><%= link_to "View workplaces", workplaces_path %></small>
          <%= render 'shared/feed' %>
          <h4>Current Locations</h4>
          <%= render 'shared/location_feed' %>
          <h4>Services:</h4>
          <%= render 'shared/services_feed' %>
        </div>
      </div>
<% else %>
  <div class="jumbotron row">
    <div class="left col l7 m8 s12">
      <h4 class="left font-black">The best way to get things done. <br /></h4>
      <div class="left col l9 m8 s12">
        <h5 class="left">YourTime handles the stuff you've been putting off, while you work.</h5>
        <hr />
      <div class="row">
       <br /> <hr /><br />
        <h5 class="left col l4 m4 s12">Choose your workplace.</h5>
        <div class="col l4 m4 s6 input-field parking-selector ">
          <%= form_tag "", id: 'workplace-selection', method: 'get' do%>
              <%= select_tag(:workplace, options_for_select(@workplaces.map{|workplace| [workplace.workplace_name, workplace.id,
              { :'data-url' => workplace_locations_path(workplace.workplace_name)}]})) %>
              <button class="waves-effect waves-light btn">Find My Services </button>
          <% end %>
        </div>
      </div>
      </div>
    </div>
        <div class="col l5 m4 s12 ">
          <%= image_tag("rocket-man-productive-level.svg", height: '400px', width: '100%' )%>
        </div>
    </div>
    <br />    <br />    <br />    <br />    <br />




    <div class="row">
      <div class="col l12 m12 s12 text-center">
        <h3>How does it work?</h3>
        <hr /><br /><br /><br/>
      </div>
    </div>
    <div class="row">
      <div class="col l4 m5 s12 offset-l2 text-left">
        <h3>Schedule your service online.</h3>
        <hr/><br/>
        <span>	&#10004;</span><h5> &nbsp; Select your workplace.</h5>
        <br />
        <span>	&#10004;</span><h5> &nbsp; Tell us your parking location.</h5>
        <br />
        <span>	&#10004;</span><h5> &nbsp; Choose a date.</h5>
        <br />
        <span>	&#10004;</span><h5> &nbsp; Pay for service to be completed.</h5>
      </div>
      <div class="col l4 m5 s12 offset-l1">
        <br/>
        <%= image_tag('rocket-man-laptop.png', width: '100%', height: '100%') %>
      </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="row">
      <div class="col l4 m5 s12 offset-l2">
        <br /><br />
        <%= image_tag('car-svg.svg', width: '300px', height: '150px') %>
      </div>
      <div class="col l5 m5 s12 text-left-small">
        <h3>Drive to work.</h3>
        <hr/><br/>
        <span>	&#10004;</span><h5> &nbsp;  Park your car on the top floor of the garage.</h5>
        <br />
        <span>	&#10004;</span><h5> &nbsp; We will meet you in the lobby to exchange the key. </h5>
        <br />
        <span>	&#10004;</span><h5> &nbsp; Continue to be a productive master.</h5>
        <br />
      </div>
    </div>

<% end %>
<script>$(document).ready(function() {
  $('select').material_select();
  var form_url = $('#workplace-selection').find(':selected').data('url');
  $('#workplace-selection').prop('action', form_url);
});

</script>
<script>

  $("#workplace-selection").change(function() {
    var form_url = $(this).find(':selected').data('url');
    $('#workplace-selection').prop('action', form_url);
  });
</script>