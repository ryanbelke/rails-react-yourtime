<% if request.original_url.to_s.include? 'sections' %>
<div class="row">
    <%= link_to section.section_name, section_services_path(section.slug),
    class: 'waves-effect waves-light btn-large blue darken-1' %>
</div>

<% else %>
  <li id="section-<%= section.id %>">
      <span class="user">
        <small><%= section.location.category.workplace.workplace_name %></small>
        &nbsp;
        <small><%= section.location.category.category_name %></small>
        <br />
        <small><%= section.location.location_name %></small>

        &nbsp; <%= link_to section.section_name, location_section_path(section.location_id, section.slug),
        class: 'link' %></span>
    <br />
    <% if logged_in? && current_user.admin? %>
      <span>create new service</span>
      <%= link_to new_section_service_path(section) do |f| %>
        <span class="location-icon material-icons">+</span>
      <% end %>
      <small class="timestamp">

        <%= link_to "delete", location_section_path(section.location_id, section.slug), method: :delete,
                    data: { confirm: "You sure?" } %>
        &nbsp;  <%= link_to "edit", edit_location_section_path(section.location_id, section.slug) %>
    <% end %>
    </small>
    <hr />
  </li>
<% end %>
